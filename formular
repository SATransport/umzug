    const langSelect = document.getElementById("lang");
    const contactMethodSelect = document.getElementById("contact-method");
    const contactButton = document.getElementById("contact-button");
    const needHelpers = document.getElementById("needHelpers");
    const numHelpers = document.getElementById("numHelpers");

    const links = {
      whatsapp: "https://wa.me/4916095080073",
      telegram: "https://t.me/SATransportAugsburg",
      email: "mailto:antokhiviacheslav@gmail.com"
    };

    function translate() {
      const lang = langSelect.value;
      const t = translations[lang];
      for (const id in t) {
        const el = document.getElementById(id);
        if (el) el.textContent = t[id];
      }
      document.body.dir = lang === "ar" ? "rtl" : "ltr";
      updateButtonText();
    }

    function updateButtonText() {
      const lang = langSelect.value;
      const method = contactMethodSelect.value;
      const t = translations[lang];
      contactButton.textContent = t["button" + method.charAt(0).toUpperCase() + method.slice(1)];
      contactButton.href = links[method];
    }

    langSelect.addEventListener("change", translate);
    contactMethodSelect.addEventListener("change", updateButtonText);

    needHelpers.addEventListener("change", () => {
      numHelpers.disabled = needHelpers.value !== "yes";
    });

    translate();
